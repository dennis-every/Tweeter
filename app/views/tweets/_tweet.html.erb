<%= turbo_frame_tag dom_id(tweet) do %>
  <div class="card">
    <div class="card-body">
      <p>
        <strong>Body:</strong>
        <%= tweet.body %>
      </p>

      Likes: (<%= tweet.likes_count %>) | Retweets: (<%= tweet.retweets_count %>) | <%= link_to 'Edit', edit_tweet_path(tweet) %>

    </div>
  </div>
<% end %>
